{
  "name": "trix-blockchain-game",
  "version": "1.0.0",
  "description": "Blockchain-based PvP gaming platform with smart contracts",
  "main": "api/index.js",
  "scripts": {
    "start": "node api/index.js",
    "dev": "concurrently \"npm run start\" \"npm run leaderboard\" \"npm run frontend\"",
    "frontend": "npx http-server web -p 8080 --cors",
    "leaderboard": "node tools/leaderboard.js",
    "deploy:contracts": "npx hardhat run scripts/deploy.js --network sepolia",
    "deploy:frontend": "vercel --prod",
    "build": "echo 'No build step required for static frontend'"
  },
  "keywords": [
    "blockchain",
    "ethereum",
    "smart-contracts",
    "gaming",
    "web3",
    "solidity"
  ],
  "author": "TriX Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "ethers": "^6.7.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "hardhat": "^2.17.0",
    "concurrently": "^8.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
